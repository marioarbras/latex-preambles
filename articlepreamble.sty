%% Missing commands
\providecommand{\abs}[1]{\left\lvert#1\right\rvert}                       % |.|
\providecommand{\br}[1]{\left(#1\right)}                                  % (.)
\providecommand{\sbr}[1]{\left[#1\right]}                                 % [.]
\providecommand{\ddfrac}[2]{\frac{\displaystyle #1}{\displaystyle #2}}    % ./.
