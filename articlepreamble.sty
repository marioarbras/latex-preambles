%% Missing environments
\newenvironment{wrappedfigure}[1]
{
  \vspace{\baselineskip}
  \noindent
  \begin{minipage}{#1}
  \captionsetup{type=figure}
}
{
  \end{minipage}
  \vspace{\baselineskip}
  \noindent
}

\newenvironment{wrappedtable}[1]
{
  \vspace{\baselineskip}
  \noindent
  \begin{minipage}{#1}
  \captionsetup{type=table}
}
{
  \end{minipage}
  \vspace{\baselineskip}
  \noindent
}

